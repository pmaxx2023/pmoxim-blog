---
import Base from '../layouts/Base.astro';

const contacts = [
  {
    label: 'Email',
    value: 'hello@pmoxim.dev',
    href: 'mailto:hello@pmoxim.dev',
  },
  {
    label: 'GitHub',
    value: '@pmoxim',
    href: 'https://github.com/pmoxim',
  },
  {
    label: 'Twitter',
    value: '@pmoxim',
    href: 'https://twitter.com/pmoxim',
  },
  {
    label: 'LinkedIn',
    value: 'pmoxim',
    href: 'https://linkedin.com/in/pmoxim',
  },
];
---

<Base title="Contact | pmoxim" description="Get in touch with me.">
  <section class="max-w-3xl mx-auto px-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight">Contact</h1>
      <p class="mt-4 text-lg text-zinc-400">
        Have a question or want to work together? Feel free to reach out.
      </p>
    </header>

    <div class="space-y-6">
      {contacts.map(({ label, value, href }) => (
        <div class="flex items-center justify-between py-4 border-b border-zinc-800">
          <span class="text-zinc-500">{label}</span>
          <a
            href={href}
            target={href.startsWith('mailto') ? undefined : '_blank'}
            rel={href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
            class="text-zinc-50 hover:text-blue-500 transition-colors"
          >
            {value}
          </a>
        </div>
      ))}
    </div>

    <div class="mt-16 p-8 bg-zinc-900 rounded-lg border border-zinc-800">
      <h2 class="text-xl font-semibold mb-4">Send a Message</h2>
      <form class="space-y-6" action="https://formspree.io/f/your-form-id" method="POST">
        <div>
          <label for="name" class="block text-sm text-zinc-400 mb-2">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 bg-zinc-800 border border-zinc-700 rounded-lg text-zinc-50 placeholder-zinc-500 focus:outline-none focus:border-blue-500 transition-colors"
            placeholder="Your name"
          />
        </div>
        <div>
          <label for="email" class="block text-sm text-zinc-400 mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 bg-zinc-800 border border-zinc-700 rounded-lg text-zinc-50 placeholder-zinc-500 focus:outline-none focus:border-blue-500 transition-colors"
            placeholder="you@example.com"
          />
        </div>
        <div>
          <label for="message" class="block text-sm text-zinc-400 mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 bg-zinc-800 border border-zinc-700 rounded-lg text-zinc-50 placeholder-zinc-500 focus:outline-none focus:border-blue-500 transition-colors resize-none"
            placeholder="What's on your mind?"
          ></textarea>
        </div>
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-zinc-50 font-medium rounded-lg hover:bg-blue-500 transition-colors"
        >
          Send Message
        </button>
      </form>
      <p class="mt-4 text-sm text-zinc-500">
        Or email me directly at <a href="mailto:hello@pmoxim.dev" class="text-blue-500 hover:text-blue-400">hello@pmoxim.dev</a>
      </p>
    </div>
  </section>
</Base>
