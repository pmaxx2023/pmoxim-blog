---
import Base from '../layouts/Base.astro';
import ProjectCard from '../components/ProjectCard.astro';
import BlogCard from '../components/BlogCard.astro';

const featuredProjects = [
  {
    title: 'VantagePlan',
    description: 'SAFe PI Planning tool built to streamline quarterly planning ceremonies. Drag-and-drop sprint planning, dependency visualization, and capacity management for distributed teams.',
    tags: ['React', 'TypeScript', 'SAFe'],
    href: 'https://vantageplan.net',
  },
  {
    title: 'Synthetic Customer Intent',
    description: 'LLM-based consumer intent evaluation system. Generate purchase rationales from synthetic personas, score them with semantic similarity, and visualize Likert distributions.',
    tags: ['OpenAI', 'Embeddings', 'Research'],
    href: 'https://syntheticcustomerintent.com',
  },
  {
    title: 'Ask Me Anything',
    description: 'AI-powered avatar trained on 25 years of product experience. Ask it about my background, frameworks, or how I think about building products.',
    tags: ['Astro', 'Claude API', 'TypeScript'],
    href: '/ask',
  },
];

const recentPosts = [
  {
    title: 'The Box, The Calculator, The API',
    description: 'Container ships, ATMs, and prior auth APIs aren\'t different innovations. They\'re the same innovation—compression—applied to different domains.',
    date: new Date('2024-11-25'),
    href: '/blog/the-box-the-calculator-the-api',
    readingTime: '6 min read',
  },
  {
    title: 'Corn vs Dumplings',
    description: 'You\'re not building platforms. You\'re building burrito bars.',
    date: new Date('2024-11-25'),
    href: '/blog/corn-vs-dumplings',
    readingTime: '7 min read',
  },
  {
    title: 'Move 37: Why We\'re Measuring AI Wrong',
    description: 'The right question isn\'t "Is this AI as smart as a PhD?" It\'s "Can this AI find Move 37 in this domain?"',
    date: new Date('2024-11-22'),
    href: '/blog/move-37',
    readingTime: '6 min read',
  },
];
---

<Base title="pmoxim">
  <!-- Hero Section -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <h1 class="text-4xl sm:text-5xl font-bold tracking-tight">
      Hey, I'm <span class="text-blue-500">Peni Moxim</span>
    </h1>
    <p class="mt-6 text-xl text-zinc-400 max-w-2xl">
      Product leader with 25 years of experience building and scaling products. Currently leading CMS-0057-F implementation at a major national payer.
    </p>
    <div class="mt-8 flex items-center gap-4">
      <a
        href="/projects"
        class="px-5 py-2.5 bg-blue-600 text-zinc-50 font-medium rounded-lg hover:bg-blue-500 transition-colors"
      >
        View Projects
      </a>
      <a
        href="/blog"
        class="px-5 py-2.5 border border-zinc-700 text-zinc-400 font-medium rounded-lg hover:border-zinc-600 hover:text-zinc-50 transition-colors"
      >
        Read Blog
      </a>
    </div>
  </section>

  <!-- Featured Projects -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold">Featured Projects</h2>
      <a href="/projects" class="text-sm text-zinc-400 hover:text-blue-500 transition-colors">
        View all &rarr;
      </a>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {featuredProjects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>

  <!-- Recent Posts -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-semibold">Recent Writing</h2>
      <a href="/blog" class="text-sm text-zinc-400 hover:text-blue-500 transition-colors">
        View all &rarr;
      </a>
    </div>
    <div class="divide-y divide-zinc-800">
      {recentPosts.map(post => (
        <BlogCard {...post} />
      ))}
    </div>
  </section>
</Base>
