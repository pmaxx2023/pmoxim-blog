---
import { getCollection } from 'astro:content';
import Base from '../../layouts/Base.astro';
import BlogCard from '../../components/BlogCard.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Base title="Blog | pmoxim" description="Thoughts on software, development, and technology.">
  <section class="max-w-3xl mx-auto px-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight">Blog</h1>
      <p class="mt-4 text-lg text-zinc-400">
        Thoughts on software, development, and technology.
      </p>
    </header>

    {sortedPosts.length > 0 ? (
      <div class="divide-y divide-zinc-800">
        {sortedPosts.map(post => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            href={`/blog/${post.slug}`}
          />
        ))}
      </div>
    ) : (
      <p class="text-zinc-400">No posts yet. Check back soon.</p>
    )}
  </section>
</Base>
