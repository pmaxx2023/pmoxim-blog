---
import Base from '../../layouts/Base.astro';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = [
  {
    title: 'VantagePlan',
    description: 'SAFe PI Planning tool built to streamline quarterly planning ceremonies. Drag-and-drop sprint planning, dependency visualization, and capacity management for distributed teams.',
    tags: ['React', 'TypeScript', 'SAFe'],
    href: 'https://vantageplan.net',
  },
];
---

<Base title="Projects | pmoxim" description="A collection of projects I've built.">
  <section class="max-w-4xl mx-auto px-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight">Projects</h1>
      <p class="mt-4 text-lg text-zinc-400">
        A collection of things I've built. Some for work, some for fun, all with care.
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>
</Base>
