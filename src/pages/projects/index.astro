---
import Base from '../../layouts/Base.astro';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = [
  {
    title: 'Gameo',
    description: 'AI-powered board game generator using R.C. Bell\'s mechanics taxonomy. Generate games for specific player personas, then evaluate with SSR (Same-Sentence Ratings) for human-aligned scoring.',
    tags: ['React', 'Gemini', 'SVG'],
    href: '/projects/gameo',
  },
  {
    title: 'Archi',
    description: 'Transform product descriptions into hand-drawn XPLANE-style architecture diagrams. AI-powered visual thinking for system design.',
    tags: ['Astro', 'Gemini', 'Visual'],
    href: 'https://getarchi.dev',
  },
  {
    title: 'Journeyo',
    description: 'Visualize strategic product journeys from Point A to Point B. AI-generated roadmaps that map where you are to where you want to be.',
    tags: ['Astro', 'Gemini', 'Strategy'],
    href: 'https://journeyo.dev',
  },
  {
    title: 'Bundo',
    description: 'Strategic product bundling and unbundling analysis. Identify hidden businesses inside products or combine offerings into something worth more than the sum.',
    tags: ['Astro', 'Gemini', 'Strategy'],
  },
  {
    title: 'Drawidea',
    description: 'Transform complex concepts into visual explanations across multiple art styles - XPLANE, TRON, minimal line, woodcut, risograph, and more.',
    tags: ['Astro', 'Gemini', 'Claude'],
  },
  {
    title: 'Passio',
    description: 'Convert photos into printable coloring book pages with full KDP-ready PDF generation. Batch process entire coloring books for various niches.',
    tags: ['Astro', 'Gemini', 'PDF'],
  },
  {
    title: 'Healthcare Data API',
    description: 'Production API serving internal teams and external partners. 40 million hits in 2024 alone, growing for 2+ years. Owns roadmap, data strategy, and partner integrations.',
    tags: ['API', 'Healthcare', 'Scale'],
  },
  {
    title: 'VantagePlan',
    description: 'SAFe PI Planning tool built to streamline quarterly planning ceremonies. Drag-and-drop sprint planning, dependency visualization, and capacity management for distributed teams.',
    tags: ['React', 'TypeScript', 'SAFe'],
    href: 'https://vantageplan.net',
  },
  {
    title: 'Synthetic Customer Intent',
    description: 'LLM-based consumer intent evaluation system. Generate purchase rationales from synthetic personas, score them with semantic similarity, and visualize Likert distributions. Based on arXiv research.',
    tags: ['OpenAI', 'Embeddings', 'Research'],
    href: 'https://syntheticcustomerintent.com',
  },
  {
    title: 'Ask Me Anything',
    description: 'AI-powered avatar trained on 25 years of product experience. Ask it about my background, frameworks, or how I think about building products.',
    tags: ['Astro', 'Claude API', 'TypeScript'],
    href: '/ask',
  },
  {
    title: 'Mental Models Coach',
    description: 'AI thinking coach with 122 mental models. Analyze situations, work through decisions, or learn frameworks. Combines original concepts with Shane Parrish\'s Farnam Street collection.',
    tags: ['AI', 'Mental Models', 'Decision-Making'],
    href: '/models',
  },
];
---

<Base title="Projects | pmoxim" description="A collection of projects I've built.">
  <section class="max-w-4xl mx-auto px-6">
    <header class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight">Projects</h1>
      <p class="mt-4 text-lg text-zinc-400">
        A collection of things I've built. Some for work, some for fun, all with care.
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map(project => (
        <ProjectCard {...project} />
      ))}
    </div>
  </section>
</Base>
