---
import Base from './Base.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: Date;
    tags?: string[];
  };
}

const { frontmatter } = Astro.props;

const formattedDate = new Date(frontmatter.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Base title={frontmatter.title} description={frontmatter.description}>
  <article class="max-w-3xl mx-auto px-6">
    <header class="mb-12">
      <time datetime={new Date(frontmatter.date).toISOString()} class="text-sm text-zinc-500">
        {formattedDate}
      </time>

      <h1 class="mt-4 text-4xl font-bold tracking-tight">
        {frontmatter.title}
      </h1>

      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="mt-6 flex flex-wrap gap-2">
          {frontmatter.tags.map(tag => (
            <span class="px-3 py-1 text-sm text-zinc-400 bg-zinc-800 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>
  </article>
</Base>
