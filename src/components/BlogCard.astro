---
interface Props {
  title: string;
  description: string;
  date: Date;
  href: string;
  readingTime?: string;
}

const { title, description, date, href, readingTime } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group py-6 border-b border-zinc-800 last:border-0">
  <a href={href} class="block">
    <div class="flex items-center gap-4 text-sm text-zinc-500 mb-2">
      <time datetime={date.toISOString()}>{formattedDate}</time>
      {readingTime && (
        <>
          <span class="text-zinc-700">|</span>
          <span>{readingTime}</span>
        </>
      )}
    </div>

    <h3 class="text-xl font-semibold text-zinc-50 group-hover:text-blue-500 transition-colors">
      {title}
    </h3>

    <p class="mt-2 text-zinc-400 line-clamp-2">
      {description}
    </p>
  </a>
</article>
